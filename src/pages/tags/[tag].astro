export async function getStaticPaths() {
    const { data, error } = await supabase
        .from('things')
        .select('tags');
    if (error) {
      console.error(error)
    }
    // const allPosts = await Astro.glob('../things/*.md');

    const tags = [];

    // data.map((t) => {
    //     tags.push({ params: { tag: t.tag }});
    // });

    const uniqueTags = [...new Set(data.map((t) => t.tags).flat())];

    uniqueTags.map((t) => {
      tags.push({ params: { tag: t }});
    });
    
    return tags;

